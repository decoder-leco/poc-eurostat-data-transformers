---
import FlowbiteModal from '../components/flowbite/modal/FlowbiteModal';
import FlowbiteSidebar from '../components/flowbite/sidebar/FlowbiteSidebar'
import {FlowbiteMainContent as FakeContent, FlowbiteMainContent} from '../components/flowbite/mocks/FlowbiteMainContent';
// Component Imports
import Counter from '../components/Counter';

import { signal } from '@preact/signals';
import FlowbiteNavbar from '../components/flowbite/navbar/FlowbiteNavbar';
import ApiReadmeComponent from '../components/ApiReadme.astro';

// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/

const count = signal(0);
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<style>
			html,
			body {
				font-family: system-ui;
				margin: 0;
			}
			body {
				padding: 2rem;
			}
		</style>
	</head>
	<body>
        <div class="grid grid-cols-4 gap-4">
            <div class="col col-span-4">
                <FlowbiteNavbar client:only="preact" />
            </div>
            <!-- ... -->
            <div class="col col-span-4">
                <FlowbiteSidebar client:only="preact" />
                
				<div class="p-4 sm:ml-64">
					<div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700">
						<ApiReadmeComponent/>
					</div>
				</div>
				
				
            </div>
        </div>


	</body>
</html>
